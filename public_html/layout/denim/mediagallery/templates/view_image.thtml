<div class="uk-grid">
  <div class="uk-width-1-1 uk-margin">
    {birdseed}
  </div>
  <div class="uk-width-1-1 uk-margin">
      <h3>{album_title}</h3>
  </div>
</div>

<div class="uk-text-right">{pagination}</div>

<div>
  <h2 class="uk-text-center">{media_title}</h2>
