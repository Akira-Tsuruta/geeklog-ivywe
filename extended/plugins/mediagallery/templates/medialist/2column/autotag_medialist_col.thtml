{# begin {templatelocation} #}

<div class="uk-width-1-2@m" uk-lightbox>
	<a href="{filename_orig}">
		<img src="{filename_orig}" alt="{media_title}" class="uk-container-center uk-overlay-scale uk-border-rounded {class}" alt="{media_title}"{xhtml}>
	</a>
	<div>
		<p class="uk-text-bold">{media_title}</p>
		<p class="uk-margin-remove">{media_desc}</p>
		<p class="uk-margin-remove">{media_keywords}</p>
	</div>
</div>

{# end {templatelocation} #}
