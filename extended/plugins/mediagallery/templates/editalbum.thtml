            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_podcast}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{podcast_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_mp3ribbon}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{mp3ribbon_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_enable_sort}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{sort_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_album_sort}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{album_sort_select}</div>
        </div>
<!-- 
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_enable_postcard}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{postcard_select}</div>
        </div>
-->
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_display_album_desc}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{display_album_desc_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_enable_album_views}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{album_views_select}</div>
        </div>
