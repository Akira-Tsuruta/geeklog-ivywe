            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_enable_views}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{views_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_enable_keywords}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{keywords_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_image_skin}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{skin_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_display_skin}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{dskin_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_album_skin}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{askin_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_albums_first}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{afirst_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_tn_size}</label></div>
            <div class="uk-form-controls uk-width-expand@m"><select class="uk-select" name="tn_size">
<option value="0">Include:100x100</option>
<option value="1">Include:150x150</option>
<option value="2">Include:200x200</option>
<option value="3">Include:Custom</option>
<option value="10">Crop:100x100</option>
<option value="11">Crop:150x150</option>
<option value="12">Crop:200x200</option>
<option value="13" selected="selected">Crop:Custom</option>
</select></div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_tnwidth}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{tnwidth_input}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_tnheight}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{tnheight_input}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_av_play_options}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{playback_type}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_ss_enable}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{ss_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_rows}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{rows_input}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_columns}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{columns_input}</div>
        </div>
    </fieldset>

    <fieldset class="uk-margin-large-top">
      <legend>{lang_album_cover}</legend>
{!if thumbnail}
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_thumbnail}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{thumbnail}</div>
        </div>
{!endif}
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_attached_thumbnail}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{attach_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_thumbnail}</label></div>
            <div class="uk-form-controls uk-width-expand@m"><input type="file" dir="ltr" name="thumbnail"{xhtml}></div>
        </div>
    </fieldset>

    <fieldset class="uk-margin-large-top">
      <legend>{lang_featured_album}</legend>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_set_featured}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{featured_select}
                <span class="uk-form-help-inline">{lang_featured_help}</span></div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_position}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{feature_position}</div>
        </div>

          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_topic}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{feature_page_select}</div>
        </div>
    </fieldset>

    <fieldset class="uk-margin-large-top">
      <legend>{lang_media_attributes}</legend>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_filename_title}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{filename_title_select}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_allow_download}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{allow_download_select}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_full_display}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{full_select}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_ri_enable}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{ri_select}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_max_image_width}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{width_input}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_max_image_height}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{height_input}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_max_filesize}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{max_size_input}&nbsp;Kb {lang_unlimited}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_display_image_size}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{display_image_size}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_usealternate}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{usealternate_select}</div>
        </div>
    </fieldset>

    <fieldset class="uk-margin-large-top">
      <legend>{lang_watermark}</legend>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_wm_auto}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{wm_auto_select}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_wm_opacity}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{wm_opacity_select}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_wm_location}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{wm_location_select}</div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_wm_id}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{wm_select}
              <span class="uk-form-help-inline">{wm_current}</span></div>
        </div>
    </fieldset>

    <fieldset class="uk-margin-large-top">
      <legend>{lang_allowed_formats}</legend>
      <table class="uk-table uk-table-condensed uk-table-striped uk-width-1-1" style="background:#ffffff;">
        <tr>
          <th style="text-align:center">{lang_image}</th>
          <th style="text-align:center">{lang_audio} / {lang_video}</th>
          <th style="text-align:center">{lang_other}</th>
        </tr>
        <tr>
          <td valign="top" align="center">
            <table>
              <tr>
                <td align="left">
                  <input type="checkbox" class="uk-checkbox" name="format_jpg" value="1" {jpg_checked}{xhtml}> <span class="uk-form-help-inline">{lang_jpg}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_png" value="2" {png_checked}{xhtml}> <span class="uk-form-help-inline">{lang_png}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_tif" value="4" {tif_checked}{xhtml}> <span class="uk-form-help-inline">{lang_tif}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_gif" value="8" {gif_checked}{xhtml}> <span class="uk-form-help-inline">{lang_gif}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_bmp" value="16" {bmp_checked}{xhtml}> <span class="uk-form-help-inline">{lang_bmp}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_tga" value="32" {tga_checked}{xhtml}> <span class="uk-form-help-inline">{lang_tga}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_psd" value="64" {psd_checked}{xhtml}> <span class="uk-form-help-inline">{lang_psd}</span><br{xhtml}>
                </td>
              </tr>
            </table>
          </td>
          <td valign="top" align="center">
            <table>
              <tr>
                <td align="left">
                  <input type="checkbox" class="uk-checkbox" name="format_mp3" value="128" {mp3_checked}{xhtml}> <span class="uk-form-help-inline">{lang_mp3}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_ogg" value="256" {ogg_checked}{xhtml}> <span class="uk-form-help-inline">{lang_ogg}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_asf" value="512" {asf_checked}{xhtml}> <span class="uk-form-help-inline">{lang_asf}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_swf" value="1024" {swf_checked}{xhtml}> <span class="uk-form-help-inline">{lang_swf}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_mov" value="2048" {mov_checked}{xhtml}> <span class="uk-form-help-inline">{lang_mov}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_mp4" value="4096" {mp4_checked}{xhtml}> <span class="uk-form-help-inline">{lang_mp4}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_mpg" value="8192" {mpg_checked}{xhtml}> <span class="uk-form-help-inline">{lang_mpg}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_flv" value="131072" {flv_checked}{xhtml}> <span class="uk-form-help-inline">{lang_flv}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_rflv" value="262144" {rflv_checked}{xhtml}> <span class="uk-form-help-inline">{lang_rflv}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_emb" value="524288" {emb_checked}{xhtml}> <span class="uk-form-help-inline">{lang_emb}</span><br{xhtml}>
                </td>
              </tr>
            </table>
          </td>
          <td valign="top" align="center">
            <table>
              <tr>
                <td align="left">
                  <input type="checkbox" class="uk-checkbox" name="format_zip" value="16384" {zip_checked}{xhtml}> <span class="uk-form-help-inline">{lang_zip}</span><br{xhtml}>
                  <input type="checkbox" class="uk-checkbox" name="format_other" value="32768" {other_checked}{xhtml}> <span class="uk-form-help-inline">{lang_other}</span><br{xhtml}>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </fieldset>

{!if perms_editor_admin}
    <fieldset class="uk-margin-large-top">
