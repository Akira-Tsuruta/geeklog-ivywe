            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_title}</label></div>
            <div class="uk-form-controls uk-width-expand@m"><input type="text" class="uk-input" name="album_name" value="{album_title}" class="uk-form-width-large"{xhtml}></div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_description}</label></div>
            <div class="uk-form-controls uk-width-expand@m"><textarea class="uk-textarea" name="album_desc" cols="50" rows="3" class="uk-width-1-1">{album_desc}</textarea></div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_parent_album}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{parent_select}</div>
        </div>

    <fieldset class="uk-margin-large-top">
      <legend>{lang_album_attributes}</legend>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_theme_select}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{album_theme_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_comments}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{comment_select}</div>
