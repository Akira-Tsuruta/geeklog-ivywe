{!endif}

{!if perms_editor_member}
    <fieldset class="uk-margin-large-top">
      <legend>{lang_accessrights}</legend>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_owner}</label></div>
            <div class="uk-form-controls uk-width-expand@m">
                {owner_username}<input type="hidden" name="owner_id" value="{owner_id}"{xhtml}></div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_permissions}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{permissions_editor}
              <span class="uk-form-help-inline">{lang_perm_key}</span></div>
        </div>
          <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_force_child_update}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{force_child_update}</div>
        </div>
    </fieldset>
{!endif}

          <div uk-grid>
            <div class="uk-form-controls uk-width-expand@m">
          <input type="submit" class="uk-button uk-button-primary" value="{lang_save}" name="mode" class="uk-button uk-button-primary"{xhtml}>
          <input type="submit" class="uk-button uk-button-danger" value="{lang_delete}" name="mode" class="uk-button uk-button-primary"{xhtml}>
          <input type="submit" class="uk-button uk-button-secondary" value="{lang_cancel}" name="mode" class="uk-button uk-button-primary"{xhtml}>
          <input type="hidden" name="album_id" value="{album_id}"{xhtml}>
          <input type="hidden" name="cover" value="{album_cover}"{xhtml}>
          <input type="hidden" name="owner" value="{album_owner}"{xhtml}>
          <input type="hidden" name="order" value="{album_order}"{xhtml}>
          <input type="hidden" name="album_cover_filename" value="{album_cover_filename}"{xhtml}>
          <input type="hidden" name="last_update" value="{last_update}"{xhtml}>
          <input type="hidden" name="media_count" value="{media_count}"{xhtml}>
          <input type="hidden" name="action" value="{action}"{xhtml}>
          <input type="hidden" name="origaid" value="{old_album_id}"{xhtml}>
            </div>
          </div>
</form>
{end_block}

