            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_enable_exif}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{exif_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_enable_ratings}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{ranking_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_enable_rss}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{rss_select}</div>
        </div>
        <div uk-grid>
            <div class="uk-width-1-4@m"><label class="uk-form-label">{lang_rsschildren}</label></div>
            <div class="uk-form-controls uk-width-expand@m">{rsschildren_select}</div>
